            <TextField fx:id="msgField" alignment="CENTER" prefHeight="50.0" prefWidth="563.0"
                       promptText="Write Here" style="-fx-background-radius: 15;" styleClass="searchUser"
                       stylesheets="@../style.css" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="5.0"/>
